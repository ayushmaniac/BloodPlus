<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contactus_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Select topic"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/contactus_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"></Spinner>
            <!--<view-->
            <!--android:layout_marginEnd="15dp"-->
            <!--android:layout_marginStart="15dp"-->
            <!--android:background="@color/whiteGray"-->
            <!--android:paddingBottom="10dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.5dp"/>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Your Query"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/contactus_query"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="top"
                android:hint="Type here"
                android:inputType="text|textMultiLine"
                android:padding="10dp"
                android:textSize="16dp" />


            <TextView

                android:id="@+id/contactus_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button"
                android:clickable="true"
                android:gravity="bottom"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:paddingRight="25dp"
                android:paddingBottom="10dp"
                android:text="Submit"
                android:textColor="@drawable/button_txt"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>